{% extends 'index.php.twig' %}

{% block content %}
    <div class="card product " style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">№ {{ order.id }}</h5>
            <p class="card-text">Пользователь {{ order.user_id }}</p>
            <p class="card-text">Адресс {{ order.address }}</p>
            <p class="card-text">Телефон {{ order.phone }}</p>
            <p class="card-text">email {{ order.email }}</p>
            <a href="/order/deleteFromDB?id={{ order.id }}">
                <button class="comeBackBtn">Удалить из базы</button>
            </a>
            <a href="/order/one?id={{ order.id }}">
                <button class="comeBackBtn">Подробнее</button>
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Имя продукта</th>
            <th scope="col">Цена</th>
            <th scope="col">Количество</th>
            <th scope="col">Стоимость</th>
            <th scope="col"></th>
        </tr>
        </thead>
        {% for product in products %}
        <tr>
            <th scope="col">  {{ product.name }} </th>
            <th scope="col">  {{ product.price }}  </th>
            <th scope="col">  {{ product.count }}  </th>
            <th scope="col">  {{ product.count * product.price }} </th>
            <th scope="col">
                <a href="/basket/add?id={{ product.id }}">
                    <button class="comeBackBtn">+</button>
                </a>
                <a href="/basket/delete?id={{ product.id }}">
                    <button class="comeBackBtn">-</button>
                </a>
            </th>
            {% endfor %}
    </table>
    <p>Итого: {{ summary }}р.</p>
    <div class=""><a href="/order/create">
            <button class=\"comeBackBtn\">Оформить заказ</button>
        </a></div>
{% endblock %}
